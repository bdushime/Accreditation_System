@page
@model AccreditationSystem.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Accreditation System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        .split-screen {
            display: flex;
            height: 100vh;
            width: 100%;
        }

        .building-image {
            flex: 1;
            background-image: url('https://images.unsplash.com/photo-1519331379826-f10be5486c6f?ixlib=rb-4.0.3');
            background-size: cover;
            background-position: center;
        }

        .form-container {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 0 2rem;
            overflow-y: auto;
            max-width: 50%;
        }

        .form-header {
            text-align: left;
            margin-bottom: 1.5rem;
        }

        .form-content {
            max-width: 400px;
            margin: 0 auto;
            width: 100%;
        }

        .form-group {
            margin-bottom: 1.25rem;
        }

        .form-label {
            font-weight: 500;
            margin-bottom: 0.5rem;
            display: block;
        }

        .form-control {
            padding: 0.75rem 1rem;
            border-radius: 8px;
            border: 1px solid #ced4da;
        }

        .btn-login {
            background-color: #6f42c1;
            border: none;
            padding: 0.75rem 1rem;
            border-radius: 8px;
            font-weight: 500;
            width: 100%;
            color: white;
        }

        .btn-login:hover {
            background-color: #5a32a3;
            color: white;
        }

        .link-primary {
            color: #6f42c1;
            text-decoration: none;
            text-align: right;
            display: block;
            margin-bottom: 1rem;
        }

        .link-primary:hover {
            text-decoration: underline;
        }

        .accreditation-link {
            color: #6f42c1;
            text-decoration: none;
            font-size: 0.9rem;
            position: absolute;
            top: 1rem;
            right: 1rem;
        }

        .form-subtitle {
            color: #6c757d;
            font-size: 0.9rem;
            margin-bottom: 2rem;
        }

        @@media (max-width: 992px) {
            .split-screen {
                flex-direction: column;
            }

            .building-image {
                height: 30vh;
            }

            .form-container {
                height: 70vh;
                max-width: 100%;
            }

            .form-content {
                max-width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="split-screen">
        <div class="building-image"></div>
        <div class="form-container">
            <a href="/" class="accreditation-link">Accreditation</a>

            <div class="form-content">
                <div class="form-header">
                    <h2 class="mb-1">Welcome Back!</h2>
                    <p class="form-subtitle">For staff only</p>
                </div>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>@Model.ErrorMessage</strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                }

                <form method="post">
                    <div class="form-group">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" asp-for="Email" placeholder="Enter email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Password</label>
                        <input type="password" class="form-control" asp-for="Password" placeholder="Enter password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="text-end mb-3">
                        <a href="/Auth/ForgotPassword" class="link-primary">Forgot password?</a>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-login">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>